<!DOCTYPE html>
<html>
  <head>
    <title>{{ title }}</title>
    
    <script src="/javascripts/jquery-2.1.1.min.js"></script>
    <script src="/javascripts/knockout-3.2.0.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/ebookmvvm.js"></script>
    <script src="/javascripts/jquery-ui.min.js"></script>

    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/jquery-ui.css' />


  </head>
  <body>
  	<div class="container">
  		<div class="jumbotron">
  			<h1>{{ title }}</h1>
    		<p>Welcome to {{ title }}</p>
    		<p>
    			<form class="form-inline">
    				<div class="form-group">
    					<input class="form-control" placeholder="Query" type="text" name="searchField" id="searchField" />
    					<a class="btn btn-default" data-bind="click:$root.findBooks">Search</a>
    				</div>
    			</form>
    		</p>
    	</div>
  	
    
    	<h2>Book list</h2>

    	<table class="table">
    		<thead>
    			<tr><th>Title</th><th>Tags</th><th>Download</th></tr>
    		</thead>
    		<tbody data-bind="foreach:books">
    			<tr>
    				<td data-bind="text:title"></td>
            <td data-bind="foreach:bookTags"><span data-bind="text:tagName(), click:$root.getTaggedBooks" class="tag"></span> </td>
    				<td>
              <a data-bind="attr:{href:$data.url}, visible: $data.url">download</a>
            </td>
    			</tr>
    		</tbody>
    	</table>

      <div class="well well-lg">
        <ul data-bind="foreach:availableTags">
          <li>
            <span data-bind="text:tagName(), click:$root.getTaggedBooks" class="tag"></span>
          </li>
        </ul>
      </div>

    </div>
  </body>
</html>